{
  "name": "mouse-scheduler-macos",
  "private": true,
  "version": "0.1.24",
  "description": "Mouse Recorder & Scheduler (macOS)",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"tsc -p tsconfig.main.json -w --preserveWatchOutput\" \"vite\" \"wait-on http://127.0.0.1:5173 dist/main/main/main.js && electron dist/main/main/main.js\"",
    "build": "tsc -p tsconfig.main.json && vite build",
    "pack": "npm run build && electron-builder --mac --publish=never",
    "lint": "eslint ."
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.21",
    "node-schedule": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "uiohook-napi": "^1.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.example.mouseScheduler.macos",
    "productName": "Mouse Scheduler (macOS)",
    "directories": {
      "output": "release"
    },
    "asar": false,
    "files": [
      "dist/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}

